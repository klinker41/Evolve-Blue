<resources>

    <!-- Uncomment any color that you want to change, otherwise comment them out and
         they will be default for the base theme you choose -->

    <!-- Main theme color for various parts on the screen, more of these things will be added in the future -->
    <color name="theme_color">#289dfc</color>
    <color name="night_theme_color">#289dfc</color>


    <!-- the text color drawn on the message for the body -->
    <color name="textColorSent">#f4f4f4</color>
    <color name="textColorReceived">#020202</color>
    <color name="night_textColorSent">#f4f4f4</color>
    <color name="night_textColorReceived">#f4f4f4</color>


    <!-- the text color drawn on the message for the date -->
    <color name="dateColorSent">#555555</color>
    <color name="dateColorReceived">#555555</color>
    <color name="night_dateColorSent">#989898</color>
    <color name="night_dateColorReceived">#989898</color>


    <!-- the link color for any links in a message text -->
    <color name="link_color">#93c</color>
    <color name="night_link_color">#93c</color>


    <!-- the message entry color is for any message entry areas in the main window and the new message window -->
    <color name="messageEntryColor">#020202</color>
    <color name="night_messageEntryColor">#f4f4f4</color>


    <!-- the color of the message entry hint, ie the text that says "type message" -->
    <color name="messageHintColor">#88020202</color>
    <color name="night_messageHintColor">#88f4f4f4</color>


    <!-- the color of the background for the drawer -->
    <color name="drawerBackground">#ffffff</color>
    <color name="night_drawerBackground">#292929</color>

    <!-- the color of the conversation drawer text -->
    <color name="conversationTextColor">#020202</color>
    <color name="night_conversationTextColor">#f4f4f4</color>


    <!-- the color of the dividers in the message list, setting to #00000000 will make them disappear -->
    <color name="dividerColor">#00000000</color>
    <color name="night_dividerColor">#00000000</color>


    <!-- the color of the dividers in the conversation list -->
    <!--<color name="conversationDividerColor">#000000</color>-->
    <!--<color name="night_conversationDividerColor">#000000</color>-->


    <!-- the background color for the conversations, this is what shows behind the messages -->
    <color name="backgroundColor">#dddddd</color>
    <color name="night_backgroundColor">#262626</color>


    <!-- the background color of a selected conversation in the conversation list (ie, the conversation -->
    <!-- that the user is currently viewing -->
    <color name="selectedConversationColor">#448e8e8e</color>
    <color name="night_selectedConversationColor">#448e8e8e</color>


    <!-- the colors for batch delete bubbles when the user is deleting conversations -->
    <color name="cancelBatch">#99CC00</color>
    <color name="deleteBatch">#CC0000</color>
    <color name="infoBatch">#33B5E5</color>
    <color name="night_cancelBatch">#99CC00</color>
    <color name="night_deleteBatch">#CC0000</color>
    <color name="night_infoBatch">#33B5E5</color>


    <!-- the colors for the delayed sending progress bubble that shows on screen after sending a message -->
    <color name="delayedSendingCircle">#CC0000</color>
    <color name="delayedSendingProgress">#FFFFFF</color>
    <color name="night_delayedSendingCircle">#CC0000</color>
    <color name="night_delayedSendingProgress">#FFFFFF</color>


    <!-- the colors for the text in the actionbar, normally the name and number of the contact -->
    <!--<color name="actionbarTitle">#f1f1f1</color>-->
    <!--<color name="actionbarSubtitle">#f1f1f1</color>-->
    <!--<color name="night_actionbarTitle">#f1f1f1</color>-->
    <!--<color name="night_actionbarSubtitle">#e1e1e1</color>-->


    <!-- include any other colors you may want to use in your layout below, these will
         not have any effect except in your message.xml if you include them -->

